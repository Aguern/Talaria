# Configuration Backend

# Base de données
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/talaria

# Sécurité
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
FERNET_KEY=your-fernet-key-here-generate-with-cryptography-fernet

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Perplexity (optionnel)
PPLX_API_KEY=pplx-your-perplexity-api-key

# Celery (optionnel - désactivé par défaut pour Render Free)
CELERY_BROKER_URL=

# Service Embedding (optionnel)
EMBEDDING_SERVICE_URL=http://localhost:8001

# Pack DéMé Traiteur - Notion
NOTION_API_TOKEN=ntn_your-notion-integration-token
NOTION_DATABASE_CLIENTS_ID=your-clients-database-id
NOTION_DATABASE_PRESTATIONS_ID=your-prestations-database-id
NOTION_DATABASE_CATALOGUE_ID=your-catalogue-database-id
NOTION_DATABASE_LIGNES_DEVIS_ID=your-lignes-devis-database-id
NOTION_DATABASE_INGREDIENTS_ID=your-ingredients-database-id
NOTION_DATABASE_MATERIEL_ID=your-materiel-database-id
NOTION_DATABASE_RH_ID=your-rh-database-id

# Pack DéMé Traiteur - Google APIs
# Google Calendar credentials (service account JSON, format inline)
GOOGLE_CALENDAR_CREDENTIALS={"type": "service_account", "project_id": "your-project", ...}
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com

# Google Drive credentials (service account JSON, format inline)
GOOGLE_DRIVE_CREDENTIALS={"type": "service_account", "project_id": "your-project", ...}
GOOGLE_DRIVE_TEMPLATE_FILE_ID=your-template-file-id
GOOGLE_DRIVE_SHARED_FOLDER_ID=your-shared-folder-id

# Google OAuth2 Token (pour Gmail API et opérations Drive)
# Généré via OAuth2 flow, copier le contenu de token.json
GOOGLE_TOKEN_JSON={"token": "ya29...", "refresh_token": "1//0g...", ...}

# Pack DéMé Traiteur - Email
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# Admin
ADMIN_SECRET=your-admin-secret-for-pool-reload

# Configuration Frontend (optionnel si frontend séparé)
NEXT_PUBLIC_API_URL=http://localhost:8000
